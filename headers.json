import json

# --- External Header Load Karne Ka Method ---
def load_headers():
    try:
        with open('headers.json', 'r') as f:
            return json.load(f)
    except:
        # Default headers agar file na ho
        return {"Content-Type": "application/x-www-form-urlencoded", "X-FB-HTTP-Engine": "Liger"}

